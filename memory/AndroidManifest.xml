<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Hiscores"
            android:label="@string/title_activity_hiscores"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Sounds"
            android:label="@string/title_activity_sounds"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Newgame"
            android:label="@string/title_activity_newgame"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".EasyHiscores"
            android:label="@string/title_activity_easy_hiscores" >
        </activity>
        <activity
            android:name=".MediumHiscores"
            android:label="@string/title_activity_medium_hiscores" >
        </activity>
        <activity
            android:name=".GameFinished"
            android:label="@string/title_activity_game_finished" 
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>